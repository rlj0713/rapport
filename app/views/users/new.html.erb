<br>
<%= link_to 'Back to Sign-In', root_path %>
<br><br>
<h3>Sign Up</h3>
	<%= form_for @user, html: {class: "form"} do |f| %>
		<%= f.text_field :email, placeholder: "email" %><br><br>
		<%= f.text_field :username, placeholder: "username" %><br><br>
		<%= f.text_field :name, placeholder: "your name" %><br><br>
		<%= f.password_field :password, placeholder: "password" %><br><br>
		School: <%= f.collection_select :school_id, School.all, :id, :name %><br><br>
		
		
		<% if @user.errors.any? %>
            <% @user.errors.each do |e| %>
            <h5><%= e.full_message %></h5>
            <% end %>
        <% end %>
		
		<%= f.submit "Sign-Up" %>
	<% end %>