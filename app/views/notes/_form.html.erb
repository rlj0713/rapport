<%= form_for(@note) do |f| %>
    <%= f.label :content %><br>
    <%= f.text_area :content, size: "70x5" %>
        <% if @note.errors.any? %>
            <% @note.errors.each do |e| %>
            <h5><%= e.full_message %></h5>
            <% end %>
        <% end %><br>

    Category <%= f.label :category_id %>
    <%= f.fields_for :category %><br>

    Priority <%= f.label :level_id %>
    <%= f.range_field :level_id, in: 1..10 %><br>
    
    
    <h3><%= f.submit %></h3>

<% end %>